extends ../layout.pug

block content
  form.form.center-form(method='post', enctype='multipart/form-data')
    h2 Edit Game
    .form-group
      label(for='name') Name
      input#name.input-field(name='name', type='text', value=game.name )
    .form-group
      label(for='description') Description
      textarea#description.input-field(name='description', type='text')= game.description
    .form-group
      label(for='logo') Logo
      input#image.input-field(name='logo', type='file', accept='.jpg,.jpeg,.png')
    .form-group
      label(for='description') Group
      select.input-field(name='genre')
        each genre in genres
          if (genre._id.equals(game.genre))
            option(value=`${genre._id}` selected)=genre.name
          else
            option(value=`${genre._id}`)=genre.name

    .form-group
      input.form-btn.btn.btn-warning(type='submit', value='Edit')
