extends ../layout.pug

block content
  form.form.center-form(method='post', enctype='multipart/form-data')
    h2 Add Game
    .form-group
      label(for='name') Name
      input#name.input-field(name='name', type='text')
    .form-group
      label(for='description') Description
      textarea#description.input-field(name='description', type='text')
    .form-group
      label(for='logo') Logo
      input#image.input-field(name='logo', type='file', accept='.jpg,.jpeg,.png')
    .form-group
      label(for='description') Group
      select.input-field(name='genre')
        each genre in genres
          option(value=`${genre._id}`)=genre.name
    .form-group
      input.form-btn.btn(type='submit', value='Add')
